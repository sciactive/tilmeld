{
  "name": "tilmeld",
  "version": "1.0.0-alpha.1",
  "description": "Nymph user and group management with access controls.",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "npm run build-components && npm run build-entities",
    "build-components": "svelte compile --format iife src/Components/TilmeldLogin.html > lib/Components/TilmeldLogin.js",
    "build-entities": "babel -d lib/Entities/ src/Entities/",
    "watch-entities": "babel --watch -d lib/Entities/ src/Entities/",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/tilmeld.git"
  },
  "keywords": [
    "users",
    "groups",
    "user management",
    "user manager",
    "group management",
    "group manager",
    "acl",
    "nymph"
  ],
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sciactive/tilmeld/issues"
  },
  "homepage": "https://github.com/sciactive/tilmeld#readme",
  "dependencies": {
    "nymph-client": "^2.2.0",
    "pform": "^3.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "svelte-cli": "^1.4.0",
    "umailphp": "^2.1"
  }
}
